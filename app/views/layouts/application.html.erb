<!DOCTYPE html>
<html>
<head>
  <title>RPharcle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
  <%= image_tag 'logo' %>
  <%= link_to "Games", games_path, class: "btn btn-primary btn-lg" %>
</div>
<div class="container-fluid">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-#{flash_type ? flash_type : 'info'}" %>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
